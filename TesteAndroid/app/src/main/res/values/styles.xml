<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue_light_hard</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Component.EditText" parent="AppTheme">
        <item name="android:background">@drawable/shape_background_edit_text</item>
        <item name="android:textSize">@dimen/app_text_size_edit_text</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="AppTheme.Component.Button" parent="AppTheme">
        <item name="android:background">@drawable/shape_background_button</item>
        <item name="android:textSize">@dimen/app_text_size_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>